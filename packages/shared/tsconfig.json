{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    // d.ts 파일 생성
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@common/*": ["common/*"],
      "@auth/*": ["auth/*"],
      "@projects/*": ["projects/*"],
      "@users/*": ["users/*"],
      "@utils/*": ["utils/*"],
      "@generated/prisma/*": ["generated/prisma/*"],
      "@modules/*": ["modules/*"],
      "@/*": ["*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
